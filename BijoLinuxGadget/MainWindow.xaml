<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Margin="0,0,0,0" ShowInTaskbar="False" Background="Yellow" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">

    <DockPanel x:Name="dpBijoLinux" Margin="1,1,1.2,1" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Transparent">
        <Canvas Name="cvsBijoLinux" Panel.ZIndex="1" Margin="0,0,0,0" VerticalAlignment="Top" >
            <TextBlock x:Name="txtCommandDescription" Padding="0,0,0,0" FontWeight="Bold" FontSize="16" Opacity="0.5" TextWrapping="Wrap" VerticalAlignment="Top" >
                <TextBlock.Background>
                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,0">
                        <GradientStop Color="#F5F5F5" Offset="0.1"/>
                    </LinearGradientBrush>
                </TextBlock.Background>
                <TextBlock.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF7FFF7F" Offset="0.1"/>
                    </LinearGradientBrush>
                </TextBlock.OpacityMask>
            </TextBlock>
        </Canvas>
        <Image x:Name="imgBijoLinux" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </DockPanel>

</Window>
